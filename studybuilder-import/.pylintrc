[MESSAGES CONTROL]
# Disable rules that are noisy or not critical for this codebase
disable=
    # Formatting - already handled by black/isort
    C0209,  # consider-using-f-string
    C0301,  # line-too-long
    
    # Documentation - would be nice but too many to fix now
    C0114,  # missing-module-docstring
    C0115,  # missing-class-docstring
    C0116,  # missing-function-docstring
    
    # Logging - too many to fix now, can be separate task
    W1203,  # logging-fstring-interpolation
    
    # Refactoring - nice to have but not critical
    R1710,  # inconsistent-return-statements
    R1705,  # no-else-return
    R1703,  # simplifiable-if-statement
    R0917,  # too-many-positional-arguments
    R0911,  # too-many-return-statements
    R0912,  # too-many-branches
    R0913,  # too-many-arguments
    R0914,  # too-many-locals
    R0915,  # too-many-statements
    R0904,  # too-many-public-methods
    R0902,  # too-many-instance-attributes
    R1702,  # too-many-nested-blocks
    R0801,  # duplicate-code
    R1714,  # consider-using-in
    R1719,  # simplifiable-if-expression
    R1735,  # use-dict-literal
    R0916,  # too-many-boolean-expressions
    
    # Import errors - often false positives in pipenv
    E0401,  # import-error
    
    # Naming - established patterns in codebase
    C0103,  # invalid-name (readCSV is established pattern)
    
    # Method signatures - intentional overrides
    W0237,  # arguments-renamed
    W0221,  # arguments-differ
    
    # Network - TODO: fix these in separate task
    W3101,  # missing-timeout (30 issues, needs systematic fix)
    
    # Minor issues
    W0511,  # fixme (TODO/FIXME comments are fine)
    W0613,  # unused-argument (sometimes needed for interface compliance)
    W0621,  # redefined-outer-name (often intentional)
    W0201,  # attribute-defined-outside-init (common pattern)
    W0107,  # unnecessary-pass
    W0105,  # pointless-string-statement (docstrings)
    W1401,  # anomalous-backslash-in-string
    W1514,  # unspecified-encoding (Python 3.13 default is UTF-8)
    W1508,  # invalid-envvar-default (os.getenv type issues)
    W0622,  # redefined-builtin (id, object used intentionally)
    W0718,  # broad-exception-caught (intentional in error handling/logging code)
    C0302,  # too-many-lines
    C0121,  # singleton-comparison (uid != None style is established)
    C0415,  # import-outside-toplevel (sometimes needed)
    C0201,  # consider-iterating-dictionary (minor optimization)
    E0102,  # function-redefined (intentional in some cases)

[FORMAT]
max-line-length=120

[BASIC]
good-names=i,j,k,ex,Run,_,df,id,ui,uid,op,v

[DESIGN]
max-attributes=15
max-locals=20
